{
  "$schema": "http://site-schema.org/draft-01",
  "$id": "http://unwalled.garden/user",
  "title": "User",
  "folders": {
    "data": {
      "title": "User data",
      "files": {
        "follows.json": {
          "title": "Followed Users",
          "jsonSchema": "http://unwalled.garden/follows.json"
        }
      },
      "folders": {
        "posts": {
          "title": "Posts",
          "extensions": ["json"],
          "jsonSchema": "http://unwalled.garden/post.json"
        },
        "known_users": {
          "title": "Known Users",
          "extensions": ["json", "png", "jpg", "jpeg"],
          "jsonSchema": "http://unwalled.garden/known-user-description.json"
        }
      }
    }
  }
}