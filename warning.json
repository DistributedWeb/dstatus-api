{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/warning.json",
  "type": "object",
  "title": "Warnings",
  "description": "Warnings about sites around the Web.",
  "required": [
    "schema",
    "datKey",
    "warning"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The record's schema",
      "const": "unwalled.garden/warning.json"
    },
    "datKey": {
      "type": "string",
      "title": "The website's dat key",
      "pattern": "^[0-9a-f]{64}$"
    },
    "warning": {
      "type": "string",
      "title": "A human-readable description of the warning"
    }
  },
  "additionalProperties": false
}