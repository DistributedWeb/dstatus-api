{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/bookmark.json",
  "type": "object",
  "title": "Bookmark",
  "description": "A saved/shared link to some URL.",
  "required": ["type", "content", "createdAt"],
  "properties": {
    "type": {
      "type": "string",
      "title": "The object's type",
      "const": "unwalled.garden/bookmark"
    },
    "content": {
      "type": "object",
      "required": ["href", "title"],
      "properties": {
        "href": {
          "type": "string",
          "format": "uri",
          "examples": [
            "dat://beakerbrowser.com"
          ],
          "maxLength": 10000
        },
        "title": {
          "type": "string",
          "maxLength": 280
        },
        "description": {
          "type": "string",
          "maxLength": 560
        },
        "tags": {
          "type": "string",
          "maxLength": 280
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}