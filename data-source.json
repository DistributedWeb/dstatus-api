{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/data-source.json",
  "type": "object",
  "title": "Data Sources",
  "description": "Sites in your personal database.",
  "required": [
    "schema",
    "url"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The record's schema",
      "const": "unwalled.garden/data-source.json"
    },
    "url": {
      "type": "string",
      "title": "The data source URL",
      "format": "uri",
      "examples": [
        "dat://beakerbrowser.com"
      ]
    }
  },
  "additionalProperties": false
}