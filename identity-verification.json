{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/identity-verification.json",
  "type": "object",
  "title": "Identity Verifications",
  "description": "The checkmarks next to sites' and people's names that verify who they are.",
  "required": [
    "schema",
    "href",
    "identity"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The record's schema",
      "const": "unwalled.garden/identity-verification.json"
    },
    "href": {
      "type": "string",
      "title": "The website's URL",
      "format": "uri",
      "examples": [
        "dat://beakerbrowser.com"
      ]
    },
    "identity": {
      "type": "string",
      "title": "The website's title or name"
    },
    "notes": {
      "type": "string",
      "title": "An explanation of how this identity was verified"
    }
  },
  "additionalProperties": false
}