{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/site-description.json",
  "type": "object",
  "title": "Site Description",
  "description": "Metadata which describes a website.",
  "required": [
    "type",
    "site",
    "createdAt"
  ],
  "properties": {
    "type": {
      "type": "string",
      "title": "The object's type",
      "const": "unwalled.garden/site-description"
    },
    "site": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "thumbnail": {
          "type": "string"
        }
      }
    },
    "createdAt": {
      "type": "date-time",
      "title": "The time of this description's creation"
    }
  },
  "additionalProperties": false
}