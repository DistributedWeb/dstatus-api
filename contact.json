{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/contact.json",
  "type": "object",
  "title": "Contacts",
  "description": "People, orgs, and sites in your personal contacts list.",
  "required": [
    "type",
    "datKey",
    "title"
  ],
  "properties": {
    "type": {
      "type": "string",
      "title": "The object's type",
      "const": "unwalled.garden/contact"
    },
    "datKey": {
      "type": "string",
      "title": "The contact's dat key",
      "pattern": "^[0-9a-f]{64}$"
    },
    "domains": {
      "type": "array",
      "title": "The DNS domain name(s) where the contact can be found",
      "items": {
        "type": "string"
      },
      "examples": [
        ["beakerbrowser.com"]
      ]
    },
    "icon": {
      "type": "string",
      "title": "The filename of the contact's icon"
    },
    "thumbnail": {
      "type": "string",
      "title": "The filename of the contact's thumbnail"
    },
    "title": {
      "type": "string",
      "title": "The contacts's name/title"
    },
    "description": {
      "type": "string",
      "title": "The contacts's bio/description"
    },
    "groups": {
      "type": "array",
      "title": "Groups for categorizing the contact",
      "items": {
        "type": "string"
      },
      "examples": [
        ["Friends"],
        ["Coworkers"],
        ["My Employer", "Companies"]
      ]
    }
  },
  "additionalProperties": false
}