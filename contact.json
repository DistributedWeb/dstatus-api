{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/contact.json",
  "type": "object",
  "title": "Contacts",
  "description": "People, orgs, and sites in your personal contacts list.",
  "required": [
    "schema",
    "href",
    "title"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The record's schema",
      "const": "unwalled.garden/contact.json"
    },
    "href": {
      "type": "string",
      "title": "The contact's URL",
      "format": "uri",
      "examples": [
        "dat://beakerbrowser.com"
      ]
    },
    "icon": {
      "type": "string",
      "title": "The filename of the contact's icon"
    },
    "thumbnail": {
      "type": "string",
      "title": "The filename of the contact's thumbnail"
    },
    "title": {
      "type": "string",
      "title": "The contacts's name/title"
    },
    "description": {
      "type": "string",
      "title": "The contacts's bio/description"
    },
    "groups": {
      "type": "array",
      "title": "Groups for categorizing the contact",
      "items": {
        "type": "string"
      },
      "examples": [
        ["Friends"],
        ["Coworkers"],
        ["My Employer", "Companies"]
      ]
    }
  },
  "additionalProperties": false
}