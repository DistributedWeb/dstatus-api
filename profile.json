{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/profile.json",
  "type": "object",
  "title": "Profile",
  "description": "Profile information.",
  "required": [
    "schema"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The object's schema",
      "const": "unwalled.garden/profile.json"
    },
    "facts": {
      "type": "array",
      "title": "Facts about this user or site",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "examples": [
        [["Location", "Phoenix"], ["Birthdate", "Jan 1, 1970"]]
      ]
    },
    "links": {
      "type": "array",
      "title": "Highlighted links",
      "items": {
        "type": "object",
        "required": [
          "href",
          "title"
        ],
        "properties": {
          "href": {
            "type": "string",
            "title": "The link's target URL",
            "format": "uri",
            "examples": [
              "dat://beakerbrowser.com"
            ]
          },
          "title": {
            "type": "string",
            "title": "The link's title"
          },
          "description": {
            "type": "string",
            "title": "The link's description"
          }
        },
        "additionalProperties": false
      },
      "examples": [
        {
          "href": "dat://beakerbrowser.com",
          "title": "Beaker Browser",
          "description": "An experimental p2p browser"
        }
      ]
    }
  },
  "additionalProperties": false
}