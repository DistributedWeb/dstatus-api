{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dat://unwalled.garden/website-description.json",
  "type": "object",
  "title": "Website Descriptions",
  "description": "Descriptions of sites around the Web.",
  "required": [
    "schema",
    "href",
    "title"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "title": "The record's schema",
      "const": "unwalled.garden/website-description.json"
    },
    "href": {
      "type": "string",
      "title": "The website's URL",
      "format": "uri",
      "examples": [
        "dat://beakerbrowser.com"
      ]
    },
    "title": {
      "type": "string",
      "title": "The website's title"
    },
    "relationship": {
      "type": "string",
      "title": "The website's relationship with the publisher of this description"
    }
  },
  "additionalProperties": false
}